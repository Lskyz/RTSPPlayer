<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- 기본 앱 정보 -->
    <key>CFBundleDevelopmentRegion</key>
    <string>$(DEVELOPMENT_LANGUAGE)</string>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    <key>CFBundleName</key>
    <string>$(PRODUCT_NAME)</string>
    <key>CFBundlePackageType</key>
    <string>$(PRODUCT_BUNDLE_PACKAGE_TYPE)</string>
    <key>CFBundleShortVersionString</key>
    <string>1.0</string>
    <key>CFBundleVersion</key>
    <string>1</string>
    <key>LSRequiresIPhoneOS</key>
    <true/>
    
    <!-- 백그라운드 모드 설정 (PiP를 위해 필요) -->
    <key>UIBackgroundModes</key>
    <array>
        <string>audio</string>
        <string>fetch</string>
        <string>remote-notification</string>
    </array>
    
    <!-- Picture in Picture 지원 -->
    <key>NSSupportsAutomaticPictureInPicture</key>
    <true/>
    
    <!-- 네트워크 권한 설정 (RTSP 스트리밍을 위해) -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <!-- HTTP 트래픽 허용 (RTSP는 기본적으로 암호화되지 않음) -->
        <key>NSAllowsArbitraryLoads</key>
        <true/>
        <key>NSAllowsArbitraryLoadsForMedia</key>
        <true/>
        <key>NSAllowsArbitraryLoadsInWebContent</key>
        <true/>
        <!-- 로컬 네트워크 접근 허용 -->
        <key>NSAllowsLocalNetworking</key>
        <true/>
    </dict>
    
    <!-- 로컬 네트워크 사용 권한 (iOS 14+) -->
    <key>NSLocalNetworkUsageDescription</key>
    <string>이 앱은 로컬 네트워크의 IP 카메라에 연결하기 위해 로컬 네트워크 접근 권한이 필요합니다.</string>
    
    <!-- Bonjour 서비스 (선택사항, 자동 장치 검색용) -->
    <key>NSBonjourServices</key>
    <array>
        <string>_rtsp._tcp</string>
        <string>_http._tcp</string>
    </array>
    
    <!-- 멀티캐스트 권한 (iOS 14.5+, RTSP 멀티캐스트 스트림용) -->
    <key>com.apple.developer.networking.multicast</key>
    <true/>
    
    <!-- 앱 방향 설정 -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
    </array>
    
    <!-- iPad 방향 설정 -->
    <key>UISupportedInterfaceOrientations~ipad</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
    
    <!-- 화면 자동 잠금 방지 (선택사항) -->
    <key>UIRequiresFullScreen</key>
    <false/>
    
    <!-- SwiftUI 앱 설정 -->
    <key>UIApplicationSceneManifest</key>
    <dict>
        <key>UIApplicationSupportsMultipleScenes</key>
        <false/>
        <key>UISceneConfigurations</key>
        <dict>
            <key>UIWindowSceneSessionRoleApplication</key>
            <array>
                <dict>
                    <key>UISceneConfigurationName</key>
                    <string>Default Configuration</string>
                    <key>UISceneDelegateClassName</key>
                    <string>$(PRODUCT_MODULE_NAME).SceneDelegate</string>
                </dict>
            </array>
        </dict>
    </dict>
    
    <!-- 상태바 스타일 -->
    <key>UIStatusBarStyle</key>
    <string>UIStatusBarStyleLightContent</string>
    
    <!-- 앱 아이콘 -->
    <key>CFBundleIcons</key>
    <dict>
        <key>CFBundlePrimaryIcon</key>
        <dict>
            <key>CFBundleIconFiles</key>
            <array>
                <string>AppIcon</string>
            </array>
        </dict>
    </dict>
    
    <!-- 런치 스크린 -->
    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>
    
    <!-- 앱이 요구하는 최소 iOS 버전 -->
    <key>MinimumOSVersion</key>
    <string>16.0</string>
    
    <!-- 앱 카테고리 -->
    <key>LSApplicationCategoryType</key>
    <string>public.app-category.video</string>
    
    <!-- 파일 공유 활성화 (선택사항, 녹화 파일 저장용) -->
    <key>UIFileSharingEnabled</key>
    <true/>
    <key>LSSupportsOpeningDocumentsInPlace</key>
    <true/>
</dict>
</plist>
